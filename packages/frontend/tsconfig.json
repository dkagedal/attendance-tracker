{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "es2015",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}